@{
  Layout = "_Layout";
}

@using System
@model HairSalon.Models.Client

<h2>Client Details</h2>
<hr />
<h3>Name: @Html.DisplayFor(model => model.ClientName)</h3>
@if(Model.PhoneNumber == null)
{
  <h3>Phone Number: N/A</h3>
}
else
{
  <h3>Phone Number: @Html.DisplayFor(model => model.PhoneNumber)</h3>
}

<h3>Stylist: @Html.DisplayFor(model => model.Stylist.StylistName)</h3>

<div id="footer">
  <p>
    @Html.ActionLink("Edit Client", "Edit", new { id = Model.ClientId }) | 
    @Html.ActionLink("Delete Client", "Delete", new { id = Model.ClientId }) | 
    @Html.ActionLink("Back to Client list", "Index") | 
    @Html.ActionLink("Return Home", "Index", "Home")
  </p>
</div>