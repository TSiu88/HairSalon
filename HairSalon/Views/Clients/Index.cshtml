@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No Clients have been Added Yet!</h3>
} 

<ul>
  @foreach (Client client in Model)
  {
    <li>@Html.ActionLink($"{client.ClientName}", "Details", new { id = client.ClientId }) | @Html.ActionLink($"{client.Stylist.StylistName}", "Details", "Stylists", new { id = client.StylistId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new Client", "Create")</p>
<p>@Html.ActionLink("Return Home", "Index", "Home")</p>