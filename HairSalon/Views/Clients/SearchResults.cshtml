@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h2>Client Search Results</h2>

<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
  </tr>
  @if(@Model.Count == 0)
  {
    <h4>No clients matching search found!</h4>
  }

  @foreach (Client client in Model)
  {
    <tr>
      <td>@Html.ActionLink($"{client.ClientId} ","Details", new { id = client.ClientId })</td>
      <td>@Html.ActionLink($"{client.ClientName} ","Details", new { id = client.ClientId })</td>
    </tr>
  }
</table>

<p>@Html.ActionLink("Cancel", "Index")</p>

<div id="footer">
  <p>
    @Html.ActionLink("Return Home", "Index", "Home")
  </p>
</div>