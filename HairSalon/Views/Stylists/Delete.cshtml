@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h2>Are you sure you want to delete this stylist?</h2>

<h4>Name: @Html.DisplayFor(model => model.StylistName)</h4>
@using (Html.BeginForm())
{
  <div class="form">
    <input class="btn btn-default" type="submit" value="Delete" />
  </div>  
}
@Html.ActionLink("Cancel", "Index")

<div id="footer">
  <p>
    @Html.ActionLink("Return Home", "Index", "Home")
  </p>
</div>