@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model HairSalon.Models.Stylist;

<h2>Stylist Details</h2>
<hr />
<h3>Name: @Html.DisplayFor(model => model.StylistName)</h3>
<h3>@Html.DisplayNameFor(model => model.Specialty): @Html.DisplayFor(model => model.Specialty)</h3>
<br>
<h4>Clients:</h4>
<ul>
@if (@Model.Clients.Count == 0)
{
  <p>No Clients Found!</p>
}

@foreach (Client client in @Model.Clients)
{
  <li>Name: @client.ClientName</li>
  <p>
    @Html.ActionLink("Edit", "Edit", "Clients", new { id = client.ClientId }) | 
    @Html.ActionLink("Delete", "Delete", "Clients", new { id = client.ClientId })
  </p>
}
</ul>

<div id="footer">
  <p>
    @Html.ActionLink("Add Client", "Create", "Clients", new { stylistId = Model.StylistId }) | 
    @Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId }) |
    @Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId }) |
    @Html.ActionLink("Back to Stylists", "Index")
  </p>
</div>

