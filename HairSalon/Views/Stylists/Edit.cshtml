@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h2>Edit Stylist</h2>

<h4>Name: @Html.DisplayFor(model => model.StylistName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.StylistId)

    @Html.Label("Name")
    @Html.EditorFor(model => model.StylistName)

    @Html.LabelFor(model => model.Specialty)
    @Html.EditorFor(model => model.Specialty)

    <input type="submit" value="Save" />
}
<p>@Html.ActionLink("Cancel", "Index")</p>