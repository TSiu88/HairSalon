@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h1>List of Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>No stylists have been added yet!</h3>
} 

<ul>
  @foreach (Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId })</li>
    <p>
      @Html.ActionLink("Edit", "Edit", new { id = stylist.StylistId}) | 
      @Html.ActionLink("Delete", "Delete", new { id = stylist.StylistId})
    </p>
  }
</ul>

<div id="footer">
  <p>
    @Html.ActionLink("Add new Stylist", "Create") | 
    @if (@Model.Count > 0)
    {
      @Html.ActionLink("Add new Client", "Create", "Clients"); 
      <span> | </span>
    }
    @Html.ActionLink("Search all Stylists", "Search") |
    @Html.ActionLink("See all Clients", "Index", "Clients") |
    @Html.ActionLink("Return Home", "Index", "Home")</p>
</div>
