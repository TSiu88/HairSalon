@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h1>Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>No stylists have been added yet!</h3>
} 

<ul>
  @foreach (Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId })</li>
    <p>
      @Html.ActionLink("Edit", "Edit", new { id = stylist.StylistId}) | 
      @Html.ActionLink("Delete", "Delete", new { id = stylist.StylistId})
    </p>
  }
</ul>

<p>@Html.ActionLink("Add new Stylist", "Create")</p>
@if (@Model.Count > 0)
{
  <p>@Html.ActionLink("Add new Client", "Create", "Clients")</p>
}
<p>@Html.ActionLink("Return Home", "Index", "Home")</p>