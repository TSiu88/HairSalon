@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h2>Stylist Search Results</h2>

<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Specialty</th>
  </tr>
  @if(@Model.Count == 0)
  {
    <h4>No Stylists matching search found!</h4>
  }

  @foreach (Stylist stylist in Model)
  {
    <tr>
      <td>@Html.ActionLink($"{stylist.StylistId} ","Details", new { id = stylist.StylistId })</td>
      <td>@Html.ActionLink($"{stylist.StylistName} ","Details", new { id = stylist.StylistId })</td>
      <td>@Html.ActionLink($"{stylist.Specialty} ","Details", new { id = stylist.StylistId })</td>
    </tr>
  }
</table>

<p>@Html.ActionLink("Cancel", "Index")</p>

<div id="footer">
  <p>
    @Html.ActionLink("Return Home", "Index", "Home")
  </p>
</div>